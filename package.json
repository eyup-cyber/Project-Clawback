{
  "name": "scroungers-multimedia",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix --max-warnings=0",
    "lint-staged": "lint-staged",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "typecheck": "npm run type-check",
    "check": "npm run lint && npm run typecheck",
    "test": "NODE_OPTIONS='--max-old-space-size=4096' jest --logHeapUsage",
    "test:watch": "jest --watch",
    "test:coverage": "NODE_OPTIONS='--max-old-space-size=4096' jest --coverage --runInBand",
    "test:ci": "NODE_OPTIONS='--max-old-space-size=4096' jest --ci --coverage --runInBand",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "prepare": "husky || true",
    "validate:env": "node scripts/validate-env.js"
  },
