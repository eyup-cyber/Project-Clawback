    "clsx": "^2.1.1",
    "critters": "^0.0.23",
    "date-fns": "^4.1.0",
    "firebase": "^12.6.0",
    "framer-motion": "^12.23.26",
    "gsap": "^3.14.1",
    "hls.js": "^1.6.15",
